= form_for [:admin, @stock_card], :html => { :class => "form" } do |f|
  - if f.object.errors.any?
    %ul#error-explanation
      - f.object.errors.full_messages.each do |msg|
        %li= msg

  %fieldset
    .field.required
      .label= f.label :code
      .value
        - if @stock_card.new_record?
          = f.text_field :code
        - else
          = @stock_card.code

  .buttons
    .button= f.submit "Save"
    .link= link_to "Cancel", [:admin, @stock_card.new_record? ? :stock_cards : @stock_card]
