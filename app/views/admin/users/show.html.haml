= hierarchy "User"

%h2
  View User
  %span.admin-actions ( #{link_to "Edit", edit_admin_user_path(@user)} )

.admin-proplist
  .fieldset
    .field
      .label Username
      .value= @user.username
    .field
      .label Name
      .value= @user.name
    .field
      .label Language
      .value= @user.language
    .field
      .label Timezone
      .value= @user.timezone
    .field
      .label Role
      .value= @user.role
    .field
      .label Last Login At
      .value= @user.last_login

  .buttons
    .link= link_to "&#171; All Users".html_safe, [:admin, :users]
    .link= link_to "Edit", edit_admin_user_path(@user)
