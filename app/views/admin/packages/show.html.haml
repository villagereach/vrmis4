= hierarchy @product, "Package"

%h2
  View Package
  %span.admin-actions ( #{link_to "Edit", edit_admin_package_path(@package)} )

.admin-proplist
  .fieldset
    .field
      .label Code
      .value= @package.code
    .field
      .label Product
      .value= link_to @product.code, [:admin, @product]
    .field
      .label Quantity
      .value= @package.quantity
    .field
      .label Primary
      .value= @package.primary

  .buttons
    .link= link_to "&#171; Product".html_safe, [:admin, @product]
    .link= link_to "Edit", edit_admin_package_path(@package)
