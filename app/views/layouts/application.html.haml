!!! XML
!!!

%html
  %head
    %title VillageReach vrMIS3
    = stylesheet_link_tag "application"
    = yield :stylesheets
    = javascript_include_tag "application"
    = yield :javascript
    = yield :metadata
    = csrf_meta_tags

  %body
    #header
      #header-logo= link_to image_tag("vr-mis-logo-small.png", :alt => "vrMIS"), root_path, :class => "nohover"
      #user-bar
        Logged in as #{link_to current_user.username, [:admin, current_user]}
        | #{link_to "Switch User", admin_switch_user_path}
    #main
      #content
        - if notice
          #notice= notice
        - if alert
          #alert= alert
        = yield
    #footer
      Copyright &copy; 2012 #{link_to "VillageReach", "http://villagereach.org/"}

    = yield :javascript_footer
