<% function tableField(fName, fVal, required, nr) {
     var fId = 'hc_visit-' + fName.replace(/[.]/g, '-');
     var input = '<input type="number" name="' + fName + '" id="' + fId + '" min="0" value="' + (fVal == null ? '' : fVal) + '" class="number' + (required ? ' validate' : '') + '" />';

     var xvalid = required
       ? '<span id="' + fId + '-x" class="x-invalid" title="This field is required.">&nbsp;</span>'
       : '';

     var nrdiv = nr
       ? '<div class="nr-div"><input type="checkbox" name="nr.' + fName + '" id="' + fId + '-nr" value="NR" class="nr"' + (fVal == 'NR' ? 'checked="checked"' : '') + '/><label for="hc-visit-' + fId + '-nr">NR</label></div>'
       : '';

     return input + xvalid + nrdiv;
   };
%>


<h2 class="screen-header"><span class="seqno">4</span>RDT Inventory: Delivery &amp; Stock Information</h2>

<p class="note">Note: Check “not recorded” (NR) if the number is not available; if there are none, record a zero (0).</p>

<form class="edit-rdt-inventory">
  <table class="spreadsheet">
    <thead>
      <tr>
        <th>(kits)</th>
        <th>Usage Last Month</th>
        <th>Ideal Stock</th>
        <th>Existing</th>
        <th>Distributed (Boxes)</th>
      </tr>
    </thead>
    <tbody>
      <% _.each(packages, function(package) { %>
        <tr>
          <th><%= package.code %></th>
          <td>
            <% var fName = "rdt_inventory." + package.code + ".usage_prev_month"; %>
            <% var fVal = (rdt_inventory[package.code]||{}).usage_prev_month; %>
            <%= tableField(fName, fVal, true, true) %>
          </td>
          <td>
            <% var fName = "rdt_inventory." + package.code + ".ideal_stock"; %>
            <% var fVal = (rdt_inventory[package.code]||{}).ideal_stock; %>
            <%= tableField(fName, fVal, true, true) %>
          </td>
          <td>
            <% var fName = "rdt_inventory." + package.code + ".existing"; %>
            <% var fVal = (rdt_inventory[package.code]||{}).existing; %>
            <%= tableField(fName, fVal, true, true) %>
          </td>
          <td>
            <% var fName = "rdt_inventory." + package.code + ".distributed"; %>
            <% var fVal = (rdt_inventory[package.code]||{}).distributed; %>
            <%= tableField(fName, fVal, true) %>
            <div class="footnote">(boxes)</div>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</form>

